root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = false
indent_style = tab

[{*.{rb,gemspec},Gemfile,Rakefile}]
indent_size = 2

[*.{c,cc,cpp,cxx,h,hpp,hxx}]
indent_size = 4

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.md]
indent_size = 4
